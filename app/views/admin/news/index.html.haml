%h1= t('.title')
%p= link_to t('.new_news'), new_admin_news_path

%table
  %thead
    %tr

      %th{:colspan => 3}= t 'actions'
  
  %tbody
    - for news in @news
      %tr{ :class => cycle(:odd, :even) }

        %td.action= link_to t('show'), news
        %td.action= link_to t('edit'), edit_news_path(news)
        %td.action= link_to t('destroy'), news, :confirm => t('are_you_sure'), :method => :delete
