%article
  %header
    %h1= "##{@member.number} #{@member}"
    
  %div#player-pic
    = image_tag @member.photo.url(:normal)
    
  %div#player-info
    %ul
      - if @member.birth_year
        %li
          %strong Syntynyt:
          = @member.birth_year
        
      - if @member.home_municipality
        %li
          %strong Kotikunta:
          = @member.home_municipality
        
      - if @member.position
        %li
          %strong Pelipaikka:
          = t("member.position.#{@member.position}")
      
      - if @member.shoots
        %li
          %strong KÃ¤tisyys:
          = t("member.shoots.#{@member.shoots}")
        
      - for question in @member.questions
        %li
          %strong= question
          = question.answer
