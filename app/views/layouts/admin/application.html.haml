!!!
%html
  %head
    %meta{ :charset => 'UTF-8' }
    %link{ :rel => "shortcut icon", :href => "/favicon.ico", :type => "image/x-icon"}/
    %title= "ISB Admin" + controller.controller_name.capitalize
    = csrf_meta_tag
    = stylesheet_link_tag "admin_style.css", "formtastic.css", "formtastic_changes.css"
    = javascript_include_tag :defaults
  %body
    .header#header
      = render :partial => 'layouts/admin/header'
    .menu#menu= render :partial => 'layouts/admin/menu'

    #content
      - unless flash.notice.blank?
        #notice
          = image_tag('accept.png', :size => '16x16')
          = flash.notice
      - unless flash.alert.blank?
        #alert
          = image_tag('error.png', :size => '16x16')
          = flash.alert
      = yield
      
