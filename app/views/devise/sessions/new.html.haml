%h2 Kirjaudu sisään

= semantic_form_for resource, :as => resource_name, :url => session_path(resource_name) do |form|
  = form.inputs do
    = form.input :email, :label => 'Sähköposti', :required => false
    = form.input :password, :label => 'Salasana', :required => false
    
    - if devise_mapping.rememberable?
      = form.input :remember_me
  
  = form.buttons do
    = form.commit_button :label => 'Kirjaudu'
    
= render :partial => "devise/shared/links"
