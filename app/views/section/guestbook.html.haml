%header
  %h1 Vieraskirja
  
= link_to "Kirjoita viesti", new_guestbook_message_path(@section.slug)
  
= paginate @messages
  
- @messages.each do |message|
  %article.comment
    %h2= "#{message.author}: #{message.title}"
    %time.meta{:datetime => html5_datetime(message.created_at)}= message.created_at
    = auto_link(simple_format(message.content))

= paginate @messages